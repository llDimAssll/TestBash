<Page x:Class="prog6.Pages.ListManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prog6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListManager">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" FontSize="36" HorizontalAlignment="Center">Логин</Label>
        <TextBox Grid.Row="1" Grid.Column="1"></TextBox>
        <Label Grid.Row="2" Grid.Column="1" FontSize="36" HorizontalAlignment="Center">Пароль</Label>
        <PasswordBox Grid.Row="3" Grid.Column="1"></PasswordBox>
        <Button Grid.Row="5" Grid.Column="1">Добавить менеджера</Button>
        <Button Grid.Row="6" Grid.Column="1" Click="Button_Click">Назад</Button>
    </Grid>
</Page>
